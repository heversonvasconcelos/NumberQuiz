<?xml version="1.0" encoding="UTF-8"?>
<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.2.0 http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.2.0.xsd">

   <!-- Begin Example RewriteRules
      // These are custom rewrite-rules, and are probably not necessary for your application.
      <rewrite match="^/old-url/(\w+)/$" substitute="/new_url/$1/" redirect="301" />
   -->

   <!-- Begin UrlMappings
      // These are examples of URL mappings, and should be customized for your application.
      <url-mapping id="home">
          <pattern value="/" />
          <view-id>/faces/index.jsf</view-id>
      </url-mapping>
      <url-mapping id="store">
          <pattern value="/store/" />
          <view-id>/faces/shop/store.jsf</view-id>
      </url-mapping>
      <url-mapping id="viewCategory">
          <pattern value="/store/#{ cat : bean.category }/" />
          <view-id>/faces/shop/store.jsf</view-id>
      </url-mapping>
      <url-mapping id="viewItem">
          <pattern value="/store/#{ cat : bean.category }/#{ iid : bean.itemId }/" />
          <view-id>/faces/shop/item.jsf</view-id>
          <action>#{bean.loadItem}</action>
      </url-mapping>
   -->
    <url-mapping id="home">
        <pattern value="/" />
        <view-id>/faces/index.xhtml</view-id>
    </url-mapping>
    <url-mapping id="numberquiz">
        <pattern value="/numberquiz/" />
        <view-id>/faces/numberquiz.xhtml</view-id>
        <action>#{loginBean.verifyAuthenticatedUser()}</action>
    </url-mapping>
    <url-mapping id="stats">
        <pattern value="/stats/" />
        <view-id>/faces/stats.xhtml</view-id>
        <action>#{loginBean.verifyAuthenticatedUser()}</action>
    </url-mapping>
    <url-mapping id="userisnotlogged">
        <pattern value="/userisnotlogged/" />
        <view-id>/faces/userisnotlogged.xhtml</view-id>
    </url-mapping>
</pretty-config>