<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
        <resource-bundle>
            <base-name>br.jus.trems.estagioaprendizado.numberquiz.bundle.messages</base-name>
            <var>msgs</var>
        </resource-bundle>
    </application>

    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>numberquiz</from-outcome>
            <to-view-id>/numberquiz.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>stats</from-outcome>
            <to-view-id>/stats.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>userisnotlogged</from-outcome>
            <to-view-id>/userisnotlogged.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
</faces-config>
